/* component/coupon/coupon.wxss */

.dialog_item{
  background: #FFD068;
}
.dialog_item_content{
    background: white;
    display: flex;
    margin: 20rpx;
    box-shadow:0px 4px 16px 0px rgba(0,0,0,0.05);
}
.dialog_item_content_left{
  width: 40%;
  display: flex;
  flex-direction: column;
  align-self:center;
}
.dialog_item_content_middle {
    position: relative;
    flex: 0 0 0;
    border-left: 1px dotted #F1F1F1;
    margin: 0 5px 0 3px;
    background: #F1F1F1;
}
.dialog_item_content_middle .before, .dialog_item_content_middle .after {
    content: '';
    position: absolute;
    width: 20rpx;
    height: 10rpx;
    left: -11rpx;
} 
.dialog_item_content_middle .before {
  border-radius: 0 0 8px 8px;
  top:0;
}
.dialog_item_content_middle .after {
  border-radius: 8px 8px 0 0 ;
  bottom:0;
}
.dialog_item_content_left_top{
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  color: red;
  font-size: 36rpx;
  letter-spacing: 1rpx;
}


.dialog_item_content_left_top symbol{
  font-size: 36rpx;
}
.dialog_item_content_left_top dis{
  font-size: 55rpx;
}

.dialog_item_content_left_bottom{
  line-height: 20rpx;
  text-align: center;
  color: #666666;
  font-size: 20rpx;
  padding-top: 10rpx;
}
.dialog_item_content_right{
  width: 60%;
  display: flex;
  padding-left: 25rpx;
  justify-content:  space-between;
}
.dialog_item_content_right_left{
  display: flex;
  flex-direction: column;
  align-self:center;
  align-items: center;
}
.dialog_item_content_right_top{
  text-align:  start;
  font-size: 28rpx;
  padding-bottom: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  width: 170rpx;
  white-space: nowrap;
}
.dialog_item_content_right_middle{
  text-align: start;
  color: #999999;
  font-size: 20rpx;
   width: 170rpx;
  padding-bottom: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.dialog_item_content_right_bottom{
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  border: #FF9A1D solid 1rpx;
  color: #FF9A1D;
}

.dialog_item_content_right_right{
  align-self: center;
  padding-top: 25rpx;
  padding-right: 20rpx
}
.dialog_item_content_right_right .use{
  color: #FE4C52;
  border-radius: 24rpx;
  font-size: 20rpx;
  padding: 10rpx;
  border:1px solid rgba(254,76,82,1);
}
.dialog_item_content_right .img{
  width:108rpx;
  height:108rpx;
}
.dialog_item_content_right .img_geted{
  width: 80rpx;
  height: 70rpx;
  align-self: center;
  padding-right: 10rpx;
}
.dialog_item_empty{
  width: 100%;
  height: 1024rpx;
  line-height: 1024rpx;
  text-align: center;
  font-size: 40rpx;
  color: gray;
}
.dialog_item_tips{
  background: white;
  margin-top: -20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding-bottom: 20rpx;
  border-bottom:#ccc solid 1rpx;
}
.dialog_item_tips_content{
  font-size: 20rpx;
}

/* 修改checkbox为圆角的方法，需要写在自己的wxss中*/
checkbox .wx-checkbox-input{
   border-radius: 50%;/* 圆角 */
   width: 40rpx; /* 背景的宽 */
   height: 40rpx; /* 背景的高 */
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   border: none;
   background: red;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
   border-radius: 50%;/* 圆角 */
   width: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   height: 40rpx;/* 选中后对勾大小，不要超过背景的尺寸 */
   line-height: 40rpx;
   text-align: center;
   font-size:30rpx; /* 对勾大小 30rpx */
   color:#fff; /* 对勾颜色 白色 */
   background: transparent;
   transform:translate(-50%, -50%) scale(1);
   -webkit-transform:translate(-50%, -50%) scale(1);
}
