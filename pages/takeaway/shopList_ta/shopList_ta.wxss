page {
    height: 100%;
    background:#f4f4f4;
    padding-top: 1rpx;
    box-sizing:border-box;
}

.scroller {
    height: 100%;
}
.no-address {
    line-height: 56rpx;
    padding: 0 30rpx;
    margin: 16rpx 0;
    font-size: 20rpx;
    background:rgba(243,243,243,1);
}
.no-address .get-address {
    position: absolute;
    right: 30rpx;
    top: 0;
    line-height: 56rpx;
    font-style: 24rpx;
    color:rgba(102,102,102,1);
}

.no-address .get-address .qb-icon {
    transform: translateY(-6rpx);
    margin-right: 5rpx;
}

.weui-panel__hd::after {
    border-bottom: none;
}
.weui-panel__bd {
    overflow: hidden;
    background: #fff;
    position: relative;
}

.weui-media-box {
    padding: 32rpx 30rpx;
}

.weui-panel__bd .weui-media-box__hd {
    width: 152rpx;
    height: 112rpx;
    margin-right: 32rpx;
}

.weui-panel__bd .weui-media-box__bd {
    padding: 10rpx 0;
}

.weui-media-box::before {
    border-top:1px solid #e5e5e5;
    right: 30rpx;
}

.weui-panel__bd .weui-media-box__bd .weui-media-box__title {
    line-height: 36rpx;
    /* margin-bottom: 90rpx; */
    color:rgba(67,67,67,1);
}


