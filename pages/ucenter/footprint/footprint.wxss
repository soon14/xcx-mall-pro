page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}

.items{
    height: auto;
    width: 100%;
    margin-bottom: 105rpx;
    overflow: hidden;
}

.item{
    margin-top: 20rpx;
    background: #fff;
}

.item .h{
    height: 83.3rpx;
    line-height: 83.3rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    border-bottom: 1px solid #f4f4f4;
    font-size: 30rpx;
    color: #333;
}

.item .h .l{
    float: left;
}

.item .h .r{
    float: right;
    color: #b4282d;
    font-size: 24rpx;
}

.item .subitem{
    display: flex;
    align-items: center;
    height: 199rpx;
    margin-left: 31.25rpx;
}

.item .subitem .img{
    height:145.83rpx;
    width:145.83rpx;
    background: #f4f4f4;
}

.item .subitem .img image{
    height:145.83rpx;
    width:145.83rpx;
}

.item .subitem .info{
    height: 145.83rpx;
    flex: 1;
    padding-left: 20rpx;
}

.item .subitem .name{
    margin-top: 30rpx;
    display: block;
    height: 44rpx;
    line-height: 44rpx;
    color: #333;
    font-size: 30rpx;
}

.item .subitem .number{
    display: block;
    height: 37rpx;
    line-height: 37rpx;
    color: #666;
    font-size: 25rpx;
}

.item .subitem .status{
    width:105rpx;
    color: #b4282d;
    font-size: 25rpx;
}

.item .b{
    height: 103rpx;
    line-height: 103rpx;
    margin-left: 31.25rpx;
    padding-right: 31.25rpx;
    border-top: 1px solid #f4f4f4;
    font-size: 30rpx;
    color: #333;
}

.item .b .l{
    float: left;
}

.item .b .r{
    float: right;
}

.item .b .btn{
    margin-top: 19rpx;
    height: 64.5rpx;
    line-height: 64.5rpx;
    text-align: center;
    padding: 0 20rpx;
    border-radius: 5rpx;
    font-size: 28rpx;
    color: #fff;
    background: #b4282d;
}

.add-item{
    background: #b4282d;
    text-align: center;
    width: 100%;
    height: 99rpx;
    line-height: 99rpx;
    position: fixed;
    border-radius: 0;
    border: none;
    color: #fff;
    font-size: 29rpx;
    bottom: 0;
    left:0;
}

.empty-view{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .icon{
  height: 248rpx;
  width: 258rpx;
  margin-bottom: 10rpx;
}

.empty-view .text{
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}