page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.getPhoneNumber{
  width: 150rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
  border:none;
  font-weight: bold;
  float:left;
}
.container{
    background: #f4f4f4;
    height: auto;
    overflow: hidden;
    width: 100%;
}
.profile-info{
    padding:0;
    margin:0;
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    background: #FFFFFF;
}
.profile-info .card-info{
    width:692rpx;
    height:304rpx;
    background:#434343;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: flex-start;
    margin:32rpx;
    border-radius: 8rpx;
    box-shadow: 0px 6rpx 16rpx 0px rgba(0,0,0,.8);

}

.profile-info .avatar{
    height: 116rpx;
    width: 116rpx;
    border-radius: 50%;
}

.profile-info .info{
    flex: 1;
    height: 85rpx;
}

.profile-info .name{
    display: block;
    height: 45rpx;
    line-height: 45rpx;
    color:#FFFFFF;
    font-size: 36rpx;
    margin-bottom: 10rpx;
}
.profile-info .point{
    background-color:#E6C988;
    width:168rpx;
    height:44rpx;
    display: flex;
    justify-content:center;
    align-items: center;
    border-radius:28rpx  0rpx  0rpx  28rpx;
}
.profile-info .point text{
    /*flex:1;*/
    font-size: 24rpx;
    color:#FFFFFF;
}
.profile-info .point icon{
    color:#FFFFFF;
    margin-bottom:20rpx;
}
.profile-info .level{
    display: block;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 10rpx;
    color: #7f7f7f;
    font-size: 30rpx;
}
.profile-info .menu{
    width:692rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin:16rpx 32rpx 32rpx 32rpx;
}
.profile-info .menu .menu_item{
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size:28rpx;
}

.channel{
    margin-top:16rpx;
    padding:0rpx;
    background: #FFFFFF;
}
.channel .item{
    width:720rpx;
    height:100rpx;
    line-height:100rpx;
     margin:0rpx 32rpx 0rpx 32rpx;
    display: flex;
    align-items: center;
    /*justify-content: center;*/
}
.channel .item text{
    flex:1;
    font-size:28rpx;
}
.channel .item icon{
    color: #999999;
    font-size: 30rpx;
    margin-right:32rpx;
}

.user-menu{
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.user-menu .item{
    float: left;
    width: 33.33333%;
    height: 187.5rpx;
    border-right: 1px solid rgba(0,0,0,.15);
    border-bottom: 1px solid rgba(0,0,0,.15);
    text-align: center;
}

.user-menu .item .a{
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border:none;
}

.user-menu .item .a:active {
    background: #eaeaea;
}

.user-menu .item.no-border {
    border-right: 0;
}

.user-menu .item.item-bottom {
    border-bottom: none;
}

