  font-size: 32rpx;
  font-weight:Medium;
}
.item .b .r button{
  width:176rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.item .b .r .btn {
  color: #fff;
  background: #434343;
  margin:16rpx 32rpx 16rpx 0rpx;
}
.item .b .r .btn-pay{
  color: #434343;
  background:#FFFFFF;
  margin:16rpx 12rpx 16rpx 0rpx;
  border:1px solid #434343;
}
.item .b .r .btn-repay {
  color: #434343;
  background:#FFFFFF;
  margin:16rpx 32rpx 16rpx 0rpx;
  border:0.5rpx solid #434343;
}
.add-item {
  background: #b4282d;
  text-align: center;
  width: 100%;
  height: 99rpx;
  line-height: 99rpx;
  position: fixed;
  border-radius: 0;
  border: none;
  color: #fff;
  font-size: 29rpx;
  bottom: 0;
  left: 0;
}

.empty-view {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty-view .empty_icon {
  height: 248rpx;
  width: 258rpx;
  margin-bottom: 10rpx;
}

.empty-view .text {
  width: auto;
  font-size: 28rpx;
  line-height: 35rpx;
  color: #999;
}

