  height: 96rpx;
  width:750rpx;
}


.item .b .r {
  height: 96rpx;
  width:750rpx;
  display: flex;
  justify-content: flex-end;
  align-content: center;
}
.item .b .r .takeout{
  width:176rpx;
  height: 64rpx;
  line-height: 64rpx;
