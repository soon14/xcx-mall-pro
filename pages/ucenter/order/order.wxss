page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.list {
  display: flex;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}

.tab_switch {
  display: flex;
  flex-direction: row;
  width: 100%;
  z-index: 10;
  position: fixed;
  background: white;
}

.tab_switch view {
  margin-top: 10rpx;
  flex-grow: 1;
  text-align: center;
  color: black;
  font-size: 12pt;
}

.select {
  width: 100%;
  margin-top: 5rpx;
  height: 5rpx;
  vertical-align: bottom;
  background: lightblue;
}

.default {
  margin-top: 5rpx;
  width: 100%;
  vertical-align: bottom;
  height: 5rpx;
  background: white;
}

.list_item {
  display: flex;
  flex-direction: column;
  background: white;
  margin-bottom: 30rpx;
  padding: 30rpx;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.list_takeout {
  flex-grow: 1;
  padding-top: 110rpx;
  height: 100%;
}

.list_gift {
  flex-grow: 1;
  padding-top: 110rpx;
  height: 100%;
}

.list_tang {
  flex-grow: 1;
  padding-top: 110rpx;
  height: 100%;
}

.img {
  width: 50rpx;
  height: 50rpx;
}

.line {
  width: 100%;
  height: 1rpx;
  background: whitesmoke;
  margin-bottom: 15rpx;
  margin-top: 15rpx;
}

.close_time {
  display: flex;
  flex-direction: row;
  position: absolute;
  left: 350rpx;
  align-items: center;
}

.close_time_text {
  color: red;
}

.status {
  color: orange;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.container {
  height: 100vh;
  width: 100%;
}

.page {
  height: 100vh;
  width: 100%;
}

.content_center {
  display: flex;
  flex-direction: row;
  width: 100%;
  align-items: center;
}

.center_info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-left: 10rpx;
}

.icon {
  width: 150rpx;
  height: 150rpx;
  background: lightgreen;
}

.price {
  font-size: 10pt;
  color: red;
}

.bottom {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.bottom_text {
  border-radius: 10%;
  border-color: lightgrey;
  border-width: 1rpx;
  border-style: solid;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-left: 20rpx;
  font-size: 10pt;
  color: grey;
}

.detail {
  z-index: 100;
  background: yellow;
  width: 100%;
  height: 100vh;
  left: 0rpx;
  top: 0rpx;
  position: absolute;
}

.shop_name {
  display: block;
  font-size: 12pt;
  width: 40%;
  color: black;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.order_time {
  font-size: 10pt;
  color: grey;
}

