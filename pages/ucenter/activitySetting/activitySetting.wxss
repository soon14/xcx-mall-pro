page {
	height: 100%;
}

.container {
	height: 100%;
}

.weui-cells {
	margin-bottom: 20rpx;
}

.weui-cell {
	line-height: 74rpx;
	padding:10rpx 30rpx
}

.weui-cells::after, .weui-cells::before {
	border:none;
}

.close {
	justify-content: center;
	color: #FF3B30;
}

.open {
	justify-content: center;
}

.weui-cell__bd {
	color: #000
}

.weui-cell__ft {
	color: #666;
	width:400rpx;
	height:75rpx;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
}