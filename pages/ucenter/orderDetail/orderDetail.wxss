page{
    height: 100%;
    width: 100%;
    background: #f4f4f4;
}
.order-view{
    width:750rpx;
    height:260rpx;
    background:#FFFFFF;
}
.order-view .order-top{
    width:100%;
    padding-top:32rpx;
    height: 48rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
.order-view .order-top image{
    width:48rpx;
    height:48rpx;
    border-radius:50%;
    margin-right:12rpx;
}
.order-view .order-top text{
    font-size: 32rpx;
    color:#434343;
    margin-right:12rpx;
}
.order-view .order-top icon{
    margin-top:-10rpx;
    font-size:32rpx;
}
.order-view .order-takeout{
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top:36rpx;
}
.order-view .order-takeout .attention{
    font-size: 28rpx;
    color:#999999;
}
.order-view .order-takeout .code{
    font-size: 60rpx;
    color:#434343;
    margin-top:-8rpx;
}
.order-info{
    width:750rpx;
    margin-top: 12rpx;
    background: #fff;
    height: auto;
    overflow: hidden;
    padding-bottom:24rpx;
}
.order-info .h{
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 32rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-info .h .label{
    font-size: 32rpx;
    color: #434343;
}   
.order-info .item-b{
    width:100%;
    height:auto;
    margin-top:32rpx;
    margin-left:32rpx;
    display: flex;
    align-items: flex-start;
}
.order-info .item-b .item-sub{
    display: inline-block;
    width:112rpx;
    font-size: 28rpx;
    color:#434343;
    margin-right: 48rpx;
    align-items: flex-start
}
.order-info .item-b .item-info{
    /* display: flex;
    height:auto; */
    width:452rpx;
    height:auto;
    display: inline-block;
    font-size: 28rpx;
    color:#999999;
}
.item-a{
    padding-left: 31.25rpx;
    height: 42.5rpx;
    padding-bottom: 12.5rpx;
    line-height: 30rpx;
    font-size: 30rpx;
    color: #666;
}

.item-c{
    margin-left: 31.25rpx;
    border-top: 1px solid #f4f4f4;
    height: 103rpx;
    line-height: 103rpx;
}

.item-c .l{
    float: left;
}

.item-c .r{
    height: 103rpx;
    float: right;
    display: flex;
    align-items: center;
    padding-right: 16rpx;
}

.item-c .r .btn{
    float: right;
}

.item-c .cost{
    color: #b4282d;
}

.item-c .btn{
    line-height: 66rpx;
    border-radius: 5rpx;
    text-align: center;
    margin: 0 15rpx;
    padding: 0 20rpx;
    height: 66rpx;
}

.item-c .btn.active{
    background: #b4282d;
    color: #fff;
}

.order-goods{
    width:750rpx;
    height:auto;
    margin-top: 12rpx;
    background: #fff;
}

.order-goods .h{
    height: 88rpx;
    line-height: 88rpx;
    margin-left: 32rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-goods .h .label{
    font-size: 32rpx;
    color: #434343;
}   
.order-goods .goods-item{
    max-height:294rpx;
    overflow: hidden;
}
.order-goods .goods-itemView{
    height:auto;
}
.order-goods .item{
    width:750rpx;
    display: flex;
    align-items: center;
    height: 76rpx;
    margin-left: 32rpx;
    margin-top:11rpx;
    margin-bottom:11rpx;
}

.order-goods .item .name{
    font-size: 28rpx;
    width:500rpx;
    color:#434343;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
	flex-direction: column;
}
.order-goods .item .name .attr{
	font-size: 24rpx;
	color:#999999;
}
.order-goods .item .number{
    width:50rpx;
    text-align: right;
    font-size: 28rpx;
    color:#999999;
}
.order-goods .item .price{
    flex:1;
    text-align: right;
    margin-right:64rpx;
    font-size: 28rpx;
    color:#434343;
}
.order-goods .moreInfo{
    width:100%;
    text-align: center;
    margin-top:20rpx;
    margin-left: 32rpx;
    border-bottom: 1px solid #f4f4f4;
}
.order-goods .moreInfo text{
    font-size: 24rpx;
    color:#999999;
    margin-right: 12rpx;
}
.order-goods .moreInfo icon{
    margin-left:12rpx;
    transform: rotate(90deg);
}
.order-goods .moreInfo .up icon{
    margin:0 auto;
    transform: rotate(-90deg);
}
.order-goods .order-discount{
    width:750rpx;
    height:100rpx;
    border-bottom: 1px solid #f4f4f4;
    display: flex;
    justify-content: flex-start;
    align-items:center;
    margin-left:32rpx;
}
.order-goods .order-discount .order-ticket{
    width:264rpx;
    height:36rpx;
    margin:32rpx 0rpx 32rpx 0rpx;
    font-size: 28rpx;
    color:#333333;
}

.order-goods .order-discount .discount{
    flex:1;
    width:88rpx;
    height:36rpx;
    text-align: right;
    margin-right: 64rpx;
    color:#FE4C52;
}

.order-goods .order-total{
    width:750rpx;
    height:100rpx;
    line-height:100rpx;
    display: flex;
    justify-content: flex-end;
    /*margin-top:32rpx;*/
    padding-bottom: 32rpx;
    border-top: 1px solid #f4f4f4;
    /* margin-right: 32rpx; */
}
.order-goods .order-total .total{
    font-size: 28rpx;
    color:#434343;
    margin-right: 32rpx;
}

.order-goods .item .info{
    flex: 1;
    height: 145.83rpx;
    margin-left: 20rpx;
}


.order-goods .item .t{
    margin-top: 8rpx;
    height: 33rpx;
    line-height: 33rpx;
    margin-bottom: 10.5rpx;
}

.order-goods .item .t .name{
    display: block;
    float: left;
    height: 33rpx;
    line-height: 33rpx;
    color: #333;
    font-size: 30rpx;
}

.order-goods .item .t .number{
    display: block;
    float: right;
    height: 33rpx;
    text-align: right;
    line-height: 33rpx;
    color: #333;
    font-size: 30rpx;
}

.order-goods .item .attr{
    height: 29rpx;
    line-height: 29rpx;
    color: #666;
    margin-bottom: 25rpx;
    font-size: 25rpx;
}

.order-goods .item .price{
    height: 30rpx;
    line-height: 30rpx;
    color: #333;
    font-size: 30rpx;
}

.order-bottom{
    margin-top: 20rpx;
    padding-left: 31.25rpx;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.order-bottom .address{
    height: 128rpx;
    padding-top: 25rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-bottom .address .t{
    height: 35rpx;
    line-height: 35rpx;
    margin-bottom: 7.5rpx;
}

.order-bottom .address .name{
    display: inline-block;
    height: 35rpx;
    width: 140rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.order-bottom .address .mobile{
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.order-bottom .address .b{
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.order-bottom .total{
    height: 106rpx;
    padding-top: 20rpx;
    border-bottom: 1px solid #f4f4f4;
}

.order-bottom .total .t{
    height: 25rpx;
    line-height: 25rpx;
    margin-bottom: 7.5rpx;
    display: flex;
}

.order-bottom .total .label{
    width: 140rpx;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.order-bottom .total .txt{
    flex: 1;
    display: inline-block;
    height: 35rpx;
    line-height: 35rpx;
    font-size: 25rpx;
}

.order-bottom .pay-fee{
    height: 81rpx;
    line-height: 81rpx;
}

.order-bottom .pay-fee .label{
    display: inline-block;
    width: 140rpx;
    color: #b4282d;
}

.order-bottom .pay-fee .txt{
    display: inline-block;
    width: 140rpx;
    color: #b4282d;
}
